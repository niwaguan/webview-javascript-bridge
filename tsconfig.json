{
  "compilerOptions": {
    "outDir": "./",
    "rootDir": ".",
    "sourceMap": true,
    "target": "ES6",
    "module": "es6",
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "pretty": true,
    "lib": [
      "esnext", "dom"
    ],
  },
  "include": [
    "typescript"
  ],
  "exclude": [
    "node_modules",
    "**/tests/*"
  ]
}